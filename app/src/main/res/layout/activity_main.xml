<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80A396"
    android:foregroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/CuadroTecladoLayout"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:background="#D8E8DF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/CancelAllButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="AC"
            android:textSize="40sp"
            android:translationX="10dp"
            android:translationY="5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/CancelButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="C"
            android:textSize="40sp"
            android:translationX="110dp"
            android:translationY="5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/PowerButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="^"
            android:textSize="40sp"
            android:translationX="110dp"
            android:translationY="80dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num8Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="8"
            android:textSize="40sp"
            android:translationX="110dp"
            android:translationY="160dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num5Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="5"
            android:textSize="40sp"
            android:translationX="110dp"
            android:translationY="240dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num2Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="2"
            android:textSize="40sp"
            android:translationX="110dp"
            android:translationY="320dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/OpenParenthesisButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="("
            android:textSize="40sp"
            android:translationX="210dp"
            android:translationY="5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num9Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="9"
            android:textSize="40sp"
            android:translationX="210dp"
            android:translationY="160dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num6Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="6"
            android:textSize="40sp"
            android:translationX="210dp"
            android:translationY="240dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num3Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="3"
            android:textSize="40sp"
            android:translationX="210dp"
            android:translationY="320dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/DotButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="."
            android:textSize="40sp"
            android:translationX="210dp"
            android:translationY="400dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/PercentButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="%"
            android:textSize="40sp"
            android:translationX="210dp"
            android:translationY="80dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/DivisionButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="÷"
            android:textSize="40sp"
            android:translationX="310dp"
            android:translationY="80dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/CloseParenthesisButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text=")"
            android:textSize="40sp"
            android:translationX="310dp"
            android:translationY="5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/MultiplicationButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="×"
            android:textAlignment="center"
            android:textSize="40sp"
            android:translationX="310dp"
            android:translationY="160dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/SubstractionButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="-"
            android:textAlignment="center"
            android:textSize="40sp"
            android:translationX="310dp"
            android:translationY="240dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/AdditionButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="+"
            android:textAlignment="center"
            android:textSize="40sp"
            android:translationX="310dp"
            android:translationY="320dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/EqualsButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="="
            android:textAlignment="center"
            android:textSize="40sp"
            android:translationX="310dp"
            android:translationY="400dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/SquareRootButton"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="√"
            android:textSize="40sp"
            android:translationX="10dp"
            android:translationY="80dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num7Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="7"
            android:textSize="40sp"
            android:translationX="10dp"
            android:translationY="160dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num4Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="4"
            android:textSize="40sp"
            android:translationX="10dp"
            android:translationY="240dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num1Button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="1"
            android:textSize="40sp"
            android:translationX="10dp"
            android:translationY="320dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/Num0Button"
            android:layout_width="188dp"
            android:layout_height="75dp"
            android:backgroundTint="#B0CDBC"
            android:fontFamily="@font/league_gothic"
            android:text="0"
            android:textSize="40sp"
            android:translationX="10dp"
            android:translationY="400dp"
            app:cornerRadius="20dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/ResultadoTextView"
        android:layout_width="372dp"
        android:layout_height="91dp"
        android:fontFamily="@font/league_gothic"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#516F64"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@+id/CuadroTecladoLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <TextView
        android:id="@+id/OperacionTextView"
        android:layout_width="366dp"
        android:layout_height="47dp"
        android:fontFamily="@font/league_gothic"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#D8E8DF"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/CuadroTecladoLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />

</androidx.constraintlayout.widget.ConstraintLayout>